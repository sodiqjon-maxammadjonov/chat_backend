# .env.example

# ----- ILOVA SOZLAMALARI -----
APP_ENV=development
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=ALL

# ----- MA'LUMOTLAR OMBORI (POSTGRESQL) -----
DB_HOST=localhost
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=
# Connection Pool'dagi maksimal ulanishlar soni
DB_POOL_SIZE=10

# ----- JWT TOKEN -----
JWT_SECRET=
JWT_ISSUER=https://your-domain.com
JWT_EXPIRATION_MINUTES=60

# ----- XAVFSIZLIK VA BOSHQA SOZLAMALAR -----
# Parolni tiklash tokenining yashash vaqti (daqiqada)
PASSWORD_RESET_TOKEN_EXPIRATION_MINUTES=15
# Username o'zgartirish orasidagi minimal kunlar soni
USERNAME_CHANGE_COOLDOWN_DAYS=15

# ----- EMAIL SERVISI (SMTP) -----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
# GMAIL'DAN OLINGAN 16 XONALI 'ILOVALAR UCHUN PAROL'
SMTP_PASSWORD=
# Xatlar kimning nomidan yuborilishi
EMAIL_FROM="Your App Name <your-email@example.com>"